<!DOCTYPE html>
<html>
  <head>
    <title>Securidad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'particles', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id='particles-js'></div>
    <% unless current_user.nil? %>
    <div class="user-panel card col-md-8 mx-auto rounded-xl card-body">
      <div class="user-panel-up row">
        <div class="user-information row col-md">
          <div class="user-information-avatar col-md-4">
            <%=image_tag(current_user.person.user_avatar, size: 100, class: "avatar")%>
          </div>
          <div class="text-left user-information-name col-md-6">
            <h4><%= current_user.person.name %></h4>
          </div>
        </div>
        <div class="text-right logout-button col-md">
          <%= link_to('SIGN OUT', destroy_user_session_path, class: 'btn btn-light col-md-6 rounded-pill', method: 'delete') %>
        </div>
      </div>
      <div class="user-panel-down flex-row">
        <div class="user-panel-menu justify-content-center">
          <button class="user-panel-menu-option btn btn-light"><a href="/">Home</a></button>
          <button class="user-panel-menu-option btn btn-light"><a href="/cards">Cartões</a></button>
          <button class="user-panel-menu-option btn btn-light"><a href="/virtual_cards">Cartões Virtuais</a></button>
          <button class="user-panel-menu-option btn btn-light"><a href="">Relatorios</a></button>
          <button class="user-panel-menu-option btn btn-light"><a href="">Sobre Nós</a></button>
          <button class="user-panel-menu-option btn btn-light"><a href="">Contato</a></button>
        </div>
      </div>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
