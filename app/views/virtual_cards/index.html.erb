<p id="notice"><%= notice %></p>

<h1>Cart√µes Virtuais</h1>
<div class="container-cards">
  <% @virtual_cards.each do |virtual_card| %>
    <%= link_to edit_virtual_card_path(virtual_card) do %>
    <div class="virtual_card">
      <div class="virtual_card__front virtual_card__part">
        <img class="virtual_card__front-square virtual_card__square" src="https://image.ibb.co/cZeFjx/little_square.png">
        <p class="virtual_card_numer"><%= virtual_card.number %></p>
        <div class="virtual_card__space-75">
          <span class="virtual_card__label"><%= virtual_card.card.name %></span>
          <p class="virtual_card__info"></p>
        </div>
        <div class="virtual_card__space-25">
          <span class="virtual_card__label">Expires</span>
          <p class="virtual_card__info"><%= virtual_card.expiration_date%></p>
        </div>
      </div>

      <div class="virtual_card__back virtual_card__part">
        <div class="virtual_card__black-line"></div>
        <div class="virtual_card__back-content">
          <div class="virtual_card__secret">
            <p class="virtual_card__secret--last"><%=virtual_card.cvc %></p>
          </div>
          <img class="virtual_card__back-square virtual_card__square" src="https://image.ibb.co/cZeFjx/little_square.png">
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
<br>

<%= link_to '+', new_virtual_card_path, class: 'btn btn-primary col-md-1 rounded-pill ml-auto p-2' %>
