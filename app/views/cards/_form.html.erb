<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field hidden third-step">
    <%= form.text_field :number, placeholder: 'Card number' %>
  </div>

  <div class="field hidden third-step">
    <%= form.text_field :cvc, placeholder: 'CVC' %>
  </div>

  <div class="field hidden third-step">
    <%= form.text_field :expiration_date, placeholder: 'Expiration date' %>
  </div>

  <div class="field hidden third-step">
    <%= form.text_field :name, placeholder: 'Card owner name' %>
  </div>

  <div class="field hidden third-step">
    <%= form.text_field :birthdate, placeholder: 'Card owner birthdate' %>
  </div>

  <div class="field hidden third-step">
    <%= form.text_field :cpf, placeholder: 'Card owner CPF' %>
  </div>
<% end %>
