<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Cvc</th>
      <th>Expiration date</th>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Cpf</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.number %></td>
        <td><%= card.cvc %></td>
        <td><%= card.expiration_date %></td>
        <td><%= card.name %></td>
        <td><%= card.birthdate %></td>
        <td><%= card.cpf %></td>
        <td><%= card.person_id %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
